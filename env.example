# Shared Ollama Service Environment Configuration
# Copy this to .env and customize as needed

# Ollama server configuration
OLLAMA_HOST=0.0.0.0
OLLAMA_ORIGINS=*
OLLAMA_KEEP_ALIVE=5m
OLLAMA_DEBUG=false

# Hardware optimization
OLLAMA_NUM_THREAD=8
OLLAMA_NUM_GPU=-1

# Port configuration
OLLAMA_PORT=11434

# Resource limits (adjust based on your hardware)
# For 8GB RAM machine:
OLLAMA_MEMORY_LIMIT=4G
OLLAMA_CPU_LIMIT=2

# For 16GB RAM machine:
# OLLAMA_MEMORY_LIMIT=8G
# OLLAMA_CPU_LIMIT=4

# Logging
LOG_LEVEL=INFO
